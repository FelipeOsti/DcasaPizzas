<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRomagnole.Forms.CodigoVerificacao">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <Image HorizontalOptions="Center" x:Name="imgLogo"/>
                <Label Margin="0,20,0,0" TextColor="Gray" Text="Verifique o e-mail utilizado para realizar o login. Nele foi enviado um código de verificação."></Label>
                <Image Margin="0,20,0,0" HorizontalOptions="Center" x:Name="imgEmail" WidthRequest="250"/>
                <Label Margin="0,20,0,0" Text="Digite o código de Verificação no campo abaixo"/>
                <Entry Margin="0,20,0,0" x:Name="edCodigo" Placeholder="Digite o código de 5 digitos" HorizontalTextAlignment="Center"/>
                <Button BackgroundColor="Transparent" BorderWidth="1" x:Name="btOk" Text="Concluido" TextColor="#B22222" CornerRadius="10" BorderColor="#B22222"/>
                <ActivityIndicator x:Name="activityIndicator"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>